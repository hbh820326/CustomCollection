<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.doone.CustomCollection.HeadView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:centreString="æˆ‘"
        app:leftString="@string/left_name"
        app:rightString="@string/right_name"
        app:centreIcon="@mipmap/ic_launcher"
        app:textColor="@color/with"
        app:HViconSize="30dp"
        app:HVtextSize="18sp"
        app:space="10dp" />
    <com.doone.CustomCollection.SwichView
        android:id="@+id/swich"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:svich_radius="5dp"
        app:thickness="3dp"
        app:openColor="@color/colorAccent"
        app:closeColor="@color/gray"
        />
    <com.doone.CustomCollection.SwichView
        android:id="@+id/swich2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swich"
        app:svich_radius="20dp"
        app:thickness="3dp"
        app:openColor="@color/colorPrimary"
        app:closeColor="@color/gray"
        />
    <com.doone.CustomCollection.SwichView
        android:id="@+id/swich3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/swich"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:svich_radius="40dp"
        app:thickness="3dp"
        app:openColor="#ac4377"
        app:closeColor="@color/gray"
        />

</android.support.constraint.ConstraintLayout>
